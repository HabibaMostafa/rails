<div class="container-fluid" style="margin-left:100px;">

<% welcome_msg = current_user.present? ? 'Hi, ' + current_user.name : 'Welcome to CupThrow Game' %>

<h1><%= welcome_msg %></h1>

<% if user_signed_in? %>
    <%= form_tag "init_player", method: "post" do %>
   
    <br/>

    <p>
        <%= 'Your ' %>
        <%= image_tag("bag.png", size: "40x40", alt: "Bag", style: 'display:inline') %>
        <%= ' contains: ' %>
    </p>

    <br/>
    <br/>

    <%= link_to "Play a Game", home_game_path, type: "button", action: "", class: "btn btn-dark" %>

    <%= link_to "Purchase Items", home_items_path, type: "button", action: "", class: "btn btn-dark" %>

    <% end %>

<% else %>
    <%= image_tag("cupthrow.jpg", size: "1000x700", alt: "Edit Entry") %>
<% end %>
</div>